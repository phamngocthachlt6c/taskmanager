<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/task_item_margin"
    android:layout_marginLeft="@dimen/task_item_margin"
    android:layout_marginRight="@dimen/task_item_margin"
    android:layout_marginStart="@dimen/task_item_margin"
    android:layout_marginTop="@dimen/task_item_margin"
    android:layout_marginBottom="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/assetIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/icon_asset" />

        <TextView
            android:id="@+id/bankingText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/assetIcon"
            android:layout_toRightOf="@id/assetIcon"
            android:gravity="center_vertical"
            android:text="@string/banking_text_footer" />

        <TextView
            android:id="@+id/bankingPoint"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/bankingText"
            android:layout_toRightOf="@id/bankingText"
            android:textColor="@color/app_color_theme" />

        <ImageView
            android:id="@+id/principleIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/assetIcon"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/icon_principle" />

        <TextView
            android:id="@+id/principleText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/assetIcon"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/assetIcon"
            android:layout_toRightOf="@id/assetIcon"
            android:gravity="center_vertical"
            android:text="@string/principle_text_footer" />

        <TextView
            android:id="@+id/principleScore"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/assetIcon"
            android:layout_toEndOf="@id/principleText"
            android:layout_toRightOf="@id/principleText"
            android:textColor="@color/app_color_theme" />

